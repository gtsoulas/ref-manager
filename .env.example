# REF-Manager Environment Configuration
# Copy this file to .env and update with your actual values

# =================================================================
# DATABASE CONFIGURATION
# =================================================================

# Database password - CHANGE THIS to a strong password!
DB_PASSWORD=changeme_use_strong_password_here

# Database connection details (usually don't need to change these)
DB_ENGINE=postgresql
DB_NAME=ref_manager_db
DB_USER=ref_manager_user
DB_HOST=db  # Use 'localhost' for non-Docker, 'db' for Docker
DB_PORT=5432

# =================================================================
# DJANGO CONFIGURATION
# =================================================================

# Django Secret Key - CHANGE THIS! Generate a new one:
# python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
SECRET_KEY=django-insecure-change-this-in-production

# Debug mode - MUST be False in production!
DEBUG=False

# Allowed hosts - Add your domain names separated by commas
# Examples:
#   Local only: localhost,127.0.0.1
#   Local network: localhost,127.0.0.1,192.168.1.100
#   Production: localhost,127.0.0.1,ref-manager.york.ac.uk
ALLOWED_HOSTS=localhost,127.0.0.1

# =================================================================
# EMAIL CONFIGURATION (Optional)
# =================================================================

# SMTP server settings - Update if you want email functionality
EMAIL_HOST=smtp.york.ac.uk
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your_email@york.ac.uk
EMAIL_HOST_PASSWORD=your_email_password
DEFAULT_FROM_EMAIL=ref-manager@york.ac.uk

# =================================================================
# SECURITY SETTINGS (Production)
# =================================================================

# Session cookie security (uncomment for production with HTTPS)
# SESSION_COOKIE_SECURE=True
# CSRF_COOKIE_SECURE=True
# SECURE_SSL_REDIRECT=True
# SECURE_HSTS_SECONDS=31536000
# SECURE_HSTS_INCLUDE_SUBDOMAINS=True
# SECURE_HSTS_PRELOAD=True

# =================================================================
# FILE UPLOAD SETTINGS
# =================================================================

# Maximum file upload size in MB
MAX_UPLOAD_SIZE=50

# =================================================================
# LOGGING
# =================================================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# =================================================================
# REF-MANAGER SPECIFIC SETTINGS
# =================================================================

# University/Department name
INSTITUTION_NAME=University of York
DEPARTMENT_NAME=Department of Language and Linguistic Science

# REF submission year
REF_YEAR=2029

# Support contact
SUPPORT_EMAIL=ref-support@york.ac.uk
SUPPORT_PHONE=+44-1904-XXXXXX

# =================================================================
# BACKUP SETTINGS
# =================================================================

# Backup retention days
BACKUP_RETENTION_DAYS=30

# Backup location
BACKUP_DIR=/home/your_username/ref-manager-backups

# =================================================================
# NOTES
# =================================================================

# IMPORTANT: 
# - Never commit .env to git (it's in .gitignore)
# - Keep .env file permissions restricted: chmod 600 .env
# - Generate strong passwords for DB_PASSWORD and SECRET_KEY
# - Set DEBUG=False in production
# - Configure ALLOWED_HOSTS properly
# - Enable HTTPS in production
# - Regular backups are essential!

# GENERATING SECURE VALUES:

# 1. Generate Django SECRET_KEY:
#    python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'

# 2. Generate strong DB password:
#    openssl rand -base64 32

# 3. Or use password manager to generate strong passwords
